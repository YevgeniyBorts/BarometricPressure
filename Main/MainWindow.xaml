<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="Barometric Pressure Calculator" Height="450" Width="800">
    <Grid>
        <Label Name="AltLabel" Content="Enter Altitude" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,220"></Label>
        <TextBox x:Name="Altitude" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,200"></TextBox>
        <Label Name="TempLabel" Content="Enter Temperature" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,170"></Label>
        <TextBox x:Name="Temperature" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,150"></TextBox>
        <Button x:Name="Calculate" Content="Calculate" Click="button_click" HorizontalAlignment="Center" VerticalAlignment="Bottom"  Width="75" Margin="0,0,0,100"></Button>
        <TextBox Name="Pressure" HorizontalAlignment="Center" VerticalAlignment="Bottom"  Width="75" Margin="0,0,0,70"></TextBox>
    </Grid>
</Window>
